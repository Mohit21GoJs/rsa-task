{
  "name": "persona-job-assistant",
  "version": "1.0.0",
  "description": "Job application tracking system with Temporal.io workflows - Monorepo",
  "private": true,
  "workspaces": [
    "backend",
    "frontend"
  ],
  "scripts": {
    "install:all": "pnpm install && cd backend && pnpm install && cd ../frontend && pnpm install",
    "build": "pnpm run build:backend && pnpm run build:frontend",
    "build:backend": "cd backend && pnpm run build",
    "build:frontend": "cd frontend && pnpm run build",
    "start": "concurrently \"pnpm run start:backend\" \"pnpm run start:frontend\"",
    "start:backend": "cd backend && pnpm run start:dev",
    "start:frontend": "cd frontend && pnpm run dev",
    "start:prod": "concurrently \"pnpm run start:backend:prod\" \"pnpm run start:frontend:prod\"",
    "start:backend:prod": "cd backend && pnpm run start:prod",
    "start:frontend:prod": "cd frontend && pnpm run start",
    "lint": "pnpm run lint:backend && pnpm run lint:frontend",
    "lint:backend": "cd backend && pnpm run lint",
    "lint:frontend": "cd frontend && pnpm run lint",
    "test": "pnpm run test:backend",
    "test:backend": "cd backend && pnpm run test",
    "format": "pnpm run format:backend && pnpm run format:frontend",
    "format:backend": "cd backend && pnpm run format",
    "format:frontend": "cd frontend && pnpm run format",
    "prepare": "command -v husky >/dev/null 2>&1 && husky install || true"
  },
  "dependencies": {
    "@google/generative-ai": "^0.2.1",
    "@nestjs/common": "^11.1.3",
    "@nestjs/config": "^4.0.2",
    "@nestjs/core": "^11.1.3",
    "@nestjs/platform-express": "^11.1.3",
    "@nestjs/schedule": "^6.0.0",
    "@nestjs/swagger": "^11.2.0",
    "@nestjs/typeorm": "^11.0.0",
    "@temporalio/activity": "^1.8.6",
    "@temporalio/client": "^1.8.6",
    "@temporalio/worker": "^1.8.6",
    "@temporalio/workflow": "^1.8.6",
    "class-transformer": "^0.5.1",
    "class-validator": "^0.14.0",
    "date-fns": "^4.1.0",
    "pg": "^8.11.3",
    "reflect-metadata": "^0.1.13",
    "restify": "^11.1.0",
    "rxjs": "^7.8.2",
    "typeorm": "^0.3.17",
    "uuid": "^11.1.0"
  },
  "devDependencies": {
    "@nestjs/cli": "^11.0.7",
    "@nestjs/schematics": "^11.0.5",
    "@nestjs/testing": "^11.1.3",
    "@types/express": "^5.0.3",
    "@types/jest": "^30.0.0",
    "@types/node": "^24.0.13",
    "@types/pg": "^8.10.9",
    "@types/supertest": "^6.0.2",
    "@types/uuid": "^10.0.0",
    "@typescript-eslint/eslint-plugin": "^8.36.0",
    "@typescript-eslint/parser": "^8.36.0",
    "concurrently": "^9.2.0",
    "eslint": "^9.31.0",
    "eslint-config-prettier": "^10.1.5",
    "eslint-plugin-prettier": "^5.1.2",
    "husky": "^9.1.7",
    "jest": "^30.0.4",
    "lint-staged": "^16.1.2",
    "prettier": "^3.1.1",
    "supertest": "^7.1.3",
    "ts-jest": "^29.1.1",
    "ts-loader": "^9.5.1",
    "ts-node": "^10.9.2",
    "tsconfig-paths": "^4.2.0",
    "typescript": "^5.3.3"
  },
  "engines": {
    "node": ">=18.0.0"
  },
  "lint-staged": {
    "backend/**/*.{ts,js}": [
      "cd backend && eslint --fix",
      "cd backend && prettier --write"
    ],
    "frontend/**/*.{ts,tsx,js,jsx}": [
      "cd frontend && eslint --fix",
      "cd frontend && prettier --write"
    ]
  }
}